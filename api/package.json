    "openapi:generate": "bun src/openapi/generate.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@bcc-code/bcc-core-api-node-sdk": "latest",
    "@bcc-events/shared": "workspace:*",
