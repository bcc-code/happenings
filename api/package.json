    "postgres": "^3.4.3",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "swagger-jsdoc": "^6.2.8",
    "zod": "^3.23.0",
    "@elysiajs/cors": "^1.1.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "better-sqlite3": "^11.0.0",
    "bun-types": "latest",
    "drizzle-kit": "^0.20.0",
    "eslint": "^8.57.0",
    "typescript": "^5.5.0"
