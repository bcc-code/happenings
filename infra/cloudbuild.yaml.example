# Example Cloud Build configuration for CI/CD
# Place this in .cloudbuild/cloudbuild.yaml or root directory

steps:
  # Build API
  - name: 'gcr.io/cloud-builders/docker'
    args: ['build', '-t', 'gcr.io/$PROJECT_ID/$_ENVIRONMENT-api:$_COMMIT_SHA', '-t', 'gcr.io/$PROJECT_ID/$_ENVIRONMENT-api:latest', './api']
    id: 'build-api'

  # Build Admin Dashboard
  - name: 'gcr.io/cloud-builders/docker'
    args: ['build', '-t', 'gcr.io/$PROJECT_ID/$_ENVIRONMENT-admin:$_COMMIT_SHA', '-t', 'gcr.io/$PROJECT_ID/$_ENVIRONMENT-admin:latest', './admin-dashboard']
    id: 'build-admin'
    waitFor: ['build-api']

  # Build End User App
  - name: 'gcr.io/cloud-builders/docker'
    args: ['build', '-t', 'gcr.io/$PROJECT_ID/$_ENVIRONMENT-app:$_COMMIT_SHA', '-t', 'gcr.io/$PROJECT_ID/$_ENVIRONMENT-app:latest', './end-user-app']
    id: 'build-app'
    waitFor: ['build-admin']

  # Push API image
  - name: 'gcr.io/cloud-builders/docker'
    args: ['push', 'gcr.io/$PROJECT_ID/$_ENVIRONMENT-api:$_COMMIT_SHA']
    id: 'push-api'
    waitFor: ['build-api']

  # Push Admin Dashboard image
  - name: 'gcr.io/cloud-builders/docker'
    args: ['push', 'gcr.io/$PROJECT_ID/$_ENVIRONMENT-admin:$_COMMIT_SHA']
    id: 'push-admin'
    waitFor: ['build-admin']

  # Push End User App image
  - name: 'gcr.io/cloud-builders/docker'
    args: ['push', 'gcr.io/$PROJECT_ID/$_ENVIRONMENT-app:$_COMMIT_SHA']
    id: 'push-app'
    waitFor: ['build-app']

  # Deploy API
  - name: 'gcr.io/google.com/cloudsdktool/cloud-sdk'
    entrypoint: gcloud
    args:
      - 'run'
      - 'services'
      - 'update'
      - '$_ENVIRONMENT-api'
      - '--image'
      - 'gcr.io/$PROJECT_ID/$_ENVIRONMENT-api:$_COMMIT_SHA'
      - '--region'
      - '$_REGION'
    id: 'deploy-api'
    waitFor: ['push-api']

  # Deploy Admin Dashboard
  - name: 'gcr.io/google.com/cloudsdktool/cloud-sdk'
    entrypoint: gcloud
    args:
      - 'run'
      - 'services'
      - 'update'
      - '$_ENVIRONMENT-admin'
      - '--image'
      - 'gcr.io/$PROJECT_ID/$_ENVIRONMENT-admin:$_COMMIT_SHA'
      - '--region'
      - '$_REGION'
    id: 'deploy-admin'
    waitFor: ['push-admin']

  # Deploy End User App
  - name: 'gcr.io/google.com/cloudsdktool/cloud-sdk'
    entrypoint: gcloud
    args:
      - 'run'
      - 'services'
      - 'update'
      - '$_ENVIRONMENT-app'
      - '--image'
      - 'gcr.io/$PROJECT_ID/$_ENVIRONMENT-app:$_COMMIT_SHA'
      - '--region'
      - '$_REGION'
    id: 'deploy-app'
    waitFor: ['push-app']

images:
  - 'gcr.io/$PROJECT_ID/$_ENVIRONMENT-api:$_COMMIT_SHA'
  - 'gcr.io/$PROJECT_ID/$_ENVIRONMENT-api:latest'
  - 'gcr.io/$PROJECT_ID/$_ENVIRONMENT-admin:$_COMMIT_SHA'
  - 'gcr.io/$PROJECT_ID/$_ENVIRONMENT-admin:latest'
  - 'gcr.io/$PROJECT_ID/$_ENVIRONMENT-app:$_COMMIT_SHA'
  - 'gcr.io/$PROJECT_ID/$_ENVIRONMENT-app:latest'

options:
  machineType: 'E2_HIGHCPU_8'
  logging: CLOUD_LOGGING_ONLY

substitutions:
  _ENVIRONMENT: 'dev'
  _REGION: 'us-central1'
  _COMMIT_SHA: 'latest'
