{
  "name": "bcc-events-registration",
  "version": "0.1.0",
  "description": "Multi-tenant event registration system for BCC Events",
  "private": true,
  "scripts": {
    "bootstrap": "bun scripts/setup.ts",
    "bootstrap:start": "bun scripts/setup.ts --start",
    "dev": "pnpm --filter \"./api\" dev & pnpm --filter \"./admin-dashboard\" dev & pnpm --filter \"./end-user-app\" dev",
    "dev:api": "pnpm --filter \"./api\" dev",
    "dev:admin": "pnpm --filter \"./admin-dashboard\" dev",
    "dev:app": "pnpm --filter \"./end-user-app\" dev",
    "build": "pnpm --recursive build",
    "build:api": "pnpm --filter \"./api\" build",
    "build:admin": "pnpm --filter \"./admin-dashboard\" build",
    "build:app": "pnpm --filter \"./end-user-app\" build",
    "test": "pnpm --recursive test",
    "test:components": "pnpm --filter \"./admin-dashboard\" test && pnpm --filter \"./end-user-app\" test",
    "test:api": "pnpm --filter \"./api\" test",
    "test:coverage": "pnpm --recursive test:coverage",
    "test:watch": "pnpm --recursive test:watch",
    "lint": "pnpm --recursive lint",
    "typecheck": "pnpm --recursive typecheck",
    "migrate": "pnpm --filter \"./api\" migrate",
    "migrate:create": "pnpm --filter \"./api\" migrate:create",
    "migrate:deploy": "pnpm --filter \"./api\" migrate:deploy",
    "db:push": "pnpm --filter \"./api\" db:push",
    "clean": "pnpm --recursive exec rm -rf node_modules dist .output .nuxt"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
